/* 🌟 主窗口背景 */
QMainWindow {
    background-color: #FAF1E6; /* 柔和米色 */
    color: #4A4A4A; /* 深灰色字体，增强可读性 */
}

/* 📌 侧边栏 QTreeWidget */
QTreeWidget#navTree {
    background-color: #E4EFE7; /* 浅绿色背景 */
    border: none;
    color: #4A4A4A;
    font-size: 14px;
}

QTreeWidget::item {
    padding: 10px;
    border-radius: 6px;
}

QTreeWidget::item:selected {
    background-color: #99BC85; /* 选中项为绿色 */
    color: white;
    font-weight: bold;
}

/* 📌 主界面 QStackedWidget */
QStackedWidget#contentStack {
    background-color: #FDFAF6; /* 更浅色调，突出层次 */
    border-radius: 10px;
}

/* 🎨 按钮优化 - 立体化 & 交互体验 */
QPushButton {
    background-color: #99BC85; /* 柔和绿色 */
    color: white;
    border-radius: 8px; /* 让按钮更圆润 */
    padding: 10px 15px;
    border: 1px solid #7A9E66;
    font-size: 10px;
    font-weight: bold;
    transition: all 0.3s ease-in-out;
    box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.15); /* 添加轻微阴影，增强立体感 */
}

/* 悬浮效果 - 更有层次 */
QPushButton:hover {
    background-color: #7A9E66;
    box-shadow: 3px 3px 6px rgba(0, 0, 0, 0.2); /* 悬浮时阴影更明显 */
}

/* 点击效果 - 视觉反馈 */
QPushButton:pressed {
    background-color: #5A7F46;
    border: 1px solid #4A6542;
    box-shadow: inset 2px 2px 4px rgba(0, 0, 0, 0.2); /* 内凹效果，增加按压感 */
}

/* 禁用状态 - 柔和的灰色 */
QPushButton:disabled {
    background-color: #D6E5D6;
    color: #A0A0A0;
    border: 1px solid #B5C4B5;
    box-shadow: none;
}


/* 🎨 标签 (QLabel) */
QLabel {
    font-size: 14px;
    color: #4A4A4A;
}

/* 📝 输入框 (QLineEdit) */
QLineEdit {
    background-color: #E4EFE7;
    border: 1px solid #99BC85;
    border-radius: 4px;
    padding: 6px;
    color: #4A4A4A;
    transition: border 0.2s ease-in-out;
}

QLineEdit:focus {
    border: 1px solid #5A7F46;
    background-color: #D6E5D6;
}

/* 📜 滚动条 */
QScrollBar:vertical {
    background: #FDFAF6;
    width: 8px;
    margin: 2px;
    border-radius: 4px;
}

QScrollBar::handle:vertical {
    background: #99BC85;
    border-radius: 4px;
}

QScrollBar::handle:vertical:hover {
    background: #7A9E66;
}

/* 📋 列表 (QListWidget) */
QListWidget {
    background-color: #FDFAF6;
    border: none;
    color: #4A4A4A;
}

QListWidget::item {
    padding: 6px;
    border-radius: 4px;
}

QListWidget::item:selected {
    background-color: #99BC85;
    color: white;
}

/* 📊 表格 (QTableWidget) */
QTableWidget {
    background-color: #FDFAF6;
    border: none;
    gridline-color: #E4EFE7;
    color: #4A4A4A;
}

QHeaderView::section {
    background-color: #E4EFE7;
    color: #4A4A4A;
    padding: 5px;
    border: none;
}
